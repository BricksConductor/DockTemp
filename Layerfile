FROM vm/ubuntu:18.04

RUN apt update && apt-get -y install transmission-cli transmission-common transmission-daemon

RUN service transmission-daemon stop

RUN sed -i 's/"rpc-whitelist": "127.0.0.1"/"rpc-whitelist": "*.*.*.*"/g' /etc/transmission-daemon/settings.json
RUN sed -i 's|"rpc-host-whitelist": ".*",|"rpc-host-whitelist": "brick54.onwebapp.io",|g' /etc/transmission-daemon/settings.json

CMD "transmission-daemon -g /etc/transmission-daemon/ -u TheBomber -v ilovebomb54!! &"

EXPOSE WEBSITE http://localhost:9091
